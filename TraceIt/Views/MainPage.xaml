<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TraceIt.MainPage">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="70">

        <StackLayout>

            <Label 
               Text="TraceIt"
               HorizontalTextAlignment="Center"
               FontSize="40"
               TextColor="DarkBlue"/>

            <Label Text="Your personal NCEA progress tracker" 
               HorizontalTextAlignment="Center"
               FontSize="17"/>

        </StackLayout>

        <StackLayout>

            <Entry x:Name="entryName"
                Placeholder="Enter your name here"/>

            <Picker x:Name="pickerLevel"
                Title="Select your NCEA level">
                <Picker.Items>
                    <x:String>Level 1</x:String>
                    <x:String>Level 2</x:String>
                    <x:String>Level 3</x:String>
                </Picker.Items>
            </Picker>

            <Button x:Name="buttonConfirm"
                    Text="Confirm"
                    TextColor="White"
                    CornerRadius="25"
                    BackgroundColor="DarkBlue"
                    Clicked="buttonConfirm_Clicked"/>

        </StackLayout>
    </StackLayout>

</ContentPage>
