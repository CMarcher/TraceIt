<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:listview="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ViewModels="clr-namespace:TraceIt.ViewModels"
             mc:Ignorable="d"
             x:Class="TraceIt.Views.SubjectSelectionPage">

    <ContentPage.Resources>

        <ResourceDictionary>
            <Style TargetType="Label" x:Key="Header">
                <Setter Property="FontSize">Large</Setter>
                <Setter Property="HorizontalTextAlignment">Center</Setter>
                <Setter Property="TextColor">Black</Setter>
            </Style>
        </ResourceDictionary>

    </ContentPage.Resources>


    <ContentPage.Content>

        <StackLayout Padding="20,10" BackgroundColor="White">

            <listview:SfListView x:Name="subjectsListView" ItemSpacing="7"
                                 SelectionMode="Multiple"
                                 ItemSize="50">

                <listview:SfListView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#f5f5f5"
                               HasShadow="False"
                               Padding="20,10,0,10"
                               CornerRadius="20"
                               BorderColor="#dedede">
                            
                            <StackLayout>
                                <Label Text="{Binding Name}" TextColor="Black"
                                       VerticalOptions="CenterAndExpand"/>
                            </StackLayout>
                            
                        </Frame>
                    </DataTemplate>
                </listview:SfListView.ItemTemplate>

                <listview:SfListView.SelectedItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="Orange"
                               HasShadow="False"
                               Padding="20,10,0,10"
                               CornerRadius="20"
                               BorderColor="#dedede">
                            
                            <StackLayout>
                                <Label Text="{Binding Name}" TextColor="White"
                                       VerticalOptions="CenterAndExpand"/>
                            </StackLayout>
                            
                        </Frame>
                    </DataTemplate>
                </listview:SfListView.SelectedItemTemplate>
                
            </listview:SfListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>